{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}


{% block body %}


	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<div style="text-align: center;font-size: 1.8em;font-weight: bold;margin-bottom:1.5em;">Formulaire de réservation</div>
		<form>
			<div class="mb-3">
				<label for="exampleInputEmail1" class="form-label">Choisir modèle véhicule :</label>

				<select class="form-select" aria-label="Default select example">
					<option selected></option>
					<option value="1">One</option>
					<option value="2">Two</option>
					<option value="3">Three</option>
				</select>
			</div>
			<div class="mb-3">
				<label for="exampleInputPassword1" class="form-label">Choisir formule :</label>
				<select class="form-select" aria-label="Default select example">
					<option selected></option>
					<option value="1">One</option>
					<option value="2">Two</option>
					<option value="3">Three</option>
				</select>
			</div>
			<div class="mb-3">
				<label for="exampleInputDate1" class="form-label">Date départ :</label>
				<input type="date" class="form-control" id="dateD" aria-describedby="emailHelp">
			</div>
			<div class="mb-3">
				<label for="exampleInputDate2" class="form-label">Date retour :</label>
				<input type="date" class="form-control" id="dateR" aria-describedby="emailHelp">
			</div>
            
			<center><button type="submit"  class="btn btn-primary">Valider</button></center>
		</form>
	</div>
{% endblock %}
